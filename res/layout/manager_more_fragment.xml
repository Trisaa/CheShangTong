<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/registerbg"
    android:clickable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/userinfo"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/headbg"
        android:orientation="horizontal">

        <TextView
            android:id="@id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更多"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userinfo"
        >

        <RelativeLayout
            android:id="@id/type_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10.0dip">

            <RelativeLayout
                android:id="@id/userinfo_ll"
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/userpic"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:src="@drawable/default_headericon" />

                <TextView
                    android:id="@id/integral_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/userpic"
                    android:layout_marginTop="10.0dip"
                    android:layout_toRightOf="@id/userpic"
                    android:background="@drawable/fix_bg"
                    android:gravity="center"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:text="积分：0分"
                    android:textColor="#ffffffff"
                    android:textSize="17.0sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@id/userinfo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/integral_tv"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="15.0dip"
                    android:layout_toRightOf="@id/userpic"
                    android:text="个人信息"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/active_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/userinfo_ll"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@id/active_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="集客活动"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:id="@id/newactiveicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/active_tv"
                    android:layout_toRightOf="@id/active_tv"
                    android:src="@drawable/tipsimage"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/prize_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/active_ll"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@id/prize_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="中奖名单"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/report_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/prize_ll"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@id/report_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="车主二维码"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/mymessage_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/report_ll"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/mymessage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="我的消息"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:id="@id/newmymessageicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mymessage_tv"
                    android:layout_toRightOf="@id/mymessage_tv"
                    android:src="@drawable/tipsimage"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/notice_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/mymessage_ll"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/notice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="提醒设置"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/versionupdate_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/notice_ll"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@id/versionupdate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="版本更新"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <TextView
                    android:id="@id/versionnotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="35.0dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="当前版本V5.0"
                    android:textColor="#ff9e9e9e"
                    android:textSize="17.0sp" />

                <ImageView
                    android:id="@id/newversionicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/versionupdate_tv"
                    android:layout_toRightOf="@id/versionupdate_tv"
                    android:src="@drawable/tipsimage"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/clearcache_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/versionupdate_ll"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/clearcache_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="清除缓存"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/function_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/clearcache_ll"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/function_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="关于车商管家"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/exitview"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/function_ll"
                android:layout_marginBottom="30.0dip"
                android:layout_marginTop="30.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@id/exitbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:onClick="exit_settings"
                    android:text="退出登录"
                    android:textColor="#fff43e2b"
                    android:textSize="20.0sp" />

                <ProgressBar
                    android:id="@id/login_processbar"
                    style="@style/newProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@id/exitbutton"
                    android:indeterminate="false"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/shouhouhuibao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/exitview"
                android:layout_marginTop="10.0dip"
                android:background="#ffededed"
                android:clickable="true"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@id/linefour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/shake" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/exit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shouhouhuibao"
                android:background="#ffededed"
                android:clickable="true"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@id/wenhua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10.0dip"
                    android:text="摇一摇退出"
                    android:textColor="#ff000000"
                    android:textSize="20.0sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>