<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectpic_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/registerbg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/userinfo"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/headbg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/goback"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:background="@null"
            android:src="@drawable/btn_style_gobackbutton" />

        <TextView
            android:id="@id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />

        <Button
            android:id="@id/refreshbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/refresh" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/userinfo"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@id/type_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="150.0dip"
                android:background="@drawable/userinfobg"
                android:clickable="false"
                android:orientation="vertical" />

            <RelativeLayout
                android:id="@id/userinfo_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130.0dip"
                android:clickable="false"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/userpic"
                    android:layout_width="64.0dip"
                    android:layout_height="64.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:background="@drawable/default_headericon_bg"
                    android:padding="4.0dip"
                    android:src="@drawable/default_headericon" />

                <TextView
                    android:id="@id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.0dip"
                    android:layout_marginTop="35.0dip"
                    android:layout_toRightOf="@id/userpic"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ff717171"
                    android:textSize="17.0sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/acount_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/userinfo_ll"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/function_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="帐号"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <TextView
                    android:id="@id/acount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40.0dip"
                    android:layout_toRightOf="@id/function_tv"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ff9e9e9e"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/integral_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/acount_ll"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="false"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@id/integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="积分记录"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <TextView
                    android:id="@id/integral_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40.0dip"
                    android:layout_toRightOf="@id/integral"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#ff9e9e9e"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/usericon_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/integral_ll"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/notice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="修改头像"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:id="@id/nextto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/fixpassword_ll"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/usericon_ll"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/btn_style_setting_click_button"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15.0dip"
                    android:text="修改密码"
                    android:textColor="#ff444444"
                    android:textSize="17.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/direction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/personalcode_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fixpassword_ll"
                android:layout_marginTop="20.0dip"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@id/personcodeimage"
                    android:layout_width="140.0dip"
                    android:layout_height="140.0dip"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/pastdue" />

                <ImageView
                    android:id="@id/userpiccenter"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50.0dip" />

                <TextView
                    android:id="@id/add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/personcodeimage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:layout_marginTop="10.0dip"
                    android:text="微信扫一下，关注公众号并绑定我！"
                    android:textColor="#ff717171"
                    android:textSize="17.0sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@id/login_processbar"
        style="@style/newProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:visibility="gone" />
</RelativeLayout>