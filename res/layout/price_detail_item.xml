<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/listitemview"
    android:background="@drawable/unused"
    android:layout_width="fill_parent"
    android:layout_height="130.0dip"
    android:layout_marginTop="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <RelativeLayout
        android:orientation="vertical"
        android:id="@id/right"
        android:layout_below="@id/layout_top"
        android:layout_width="110.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true">

        <Button
            android:textSize="16.0sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@id/okbutton"
            android:background="@drawable/btn_style_commitbutton"
            android:visibility="gone"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:text="兑奖"
            android:layout_centerInParent="true" />

        <TextView
            android:textSize="17.0sp"
            android:textColor="#ff000000"
            android:id="@id/yongjiu"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50.0dip"
            android:text="永久有效"
            android:layout_below="@id/okbutton"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@id/usedimage"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip"
            android:src="@drawable/usedbutton"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="12.0sp"
            android:textColor="#ff515151"
            android:id="@id/datetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.0dip"
            android:text="截止日期"
            android:layout_centerHorizontal="true" />

        <TextView
            android:textSize="12.0sp"
            android:textColor="#ff000000"
            android:id="@id/youxiaoqi"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="2014-5-24"
            android:layout_below="@id/datetitle"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/right">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/leftone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:textSize="14.0sp"
                android:textColor="#ff000000"
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="20.0dip"
                android:text="兑换码" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/lefttwo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:textSize="20.0sp"
                android:textColor="#fff8c588"
                android:id="@id/prizename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="7.0dip"
                android:text="奖品名称" />

            <TextView
                android:textSize="16.0sp"
                android:textColor="#ff000000"
                android:id="@id/ticketvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:text="价值" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/leftthree"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:textSize="12.0sp"
                android:textColor="#ff919191"
                android:layout_gravity="center_vertical"
                android:id="@id/shuoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="15.0dip"
                android:layout_marginBottom="20.0dip"
                android:text="三等奖" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@id/login_processbar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_centerInParent="true"
        style="@style/newProgressBar" />
</RelativeLayout>